<configuration scan="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
      </pattern>
    </encoder>
  </appender>


    <appender name="LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/opendaylight.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/opendaylight.%d.log.zip</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%date{"yyyy-MM-dd HH:mm:ss.SSS z"} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

  <logger name="org.opendaylight.yangtools.yang" level="INFO"/>

  <logger name="com.bt.sitb" level="DEBUG"/>

  <root level="DEBUG">
      <appender-ref ref="STDOUT" />
      <appender-ref ref="LOG" />
  </root>
</configuration>
